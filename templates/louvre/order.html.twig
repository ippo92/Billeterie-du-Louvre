{% extends 'base.html.twig' %}

{% block title %}Billeterie du Louvre{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/ticketstyle.css') }}" />
{% endblock %}

{% block body %}
    <div id="booking" class="section">
        <div class="section-center">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-7 col-md-push-5">

                    </div>
                    <div class="col-md-12 ">
                        <div class="booking-form">
                            <h1>Récapitulatif de votre commande :</h1>
                            {% for ticket in tickets %}
                            <p>Billet 1</p>
                                <div class="row">

                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <span class="form-label">Nom</span>
                                            {{ ticket.firstname }}
                                        </div>

                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <span class="form-label">Prénom</span>
                                            {{ ticket.lastname }}
                                        </div>

                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <span class="form-label">Pays</span>
                                            {{ ticket.country }}
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <span class="form-label">Date de naissance</span>
                                            {{ ticket.dateOfBirth|date("d/m/Y") }}
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <span class="form-label">Tarif réduit?</span>
                                            {{ ticket.category }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="form-btn">
                                PRIX TOTAL : {{ price }} EUROS <br>
                                <button type="submit" class="submit-btn">Payez</button>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}